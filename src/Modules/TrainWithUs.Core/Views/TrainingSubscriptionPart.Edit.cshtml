@model TrainingSubscriptionPartViewModel
@using TrainWithUs.Core.ViewModels

<fieldset class="form-group" asp-validation-class-for="TrainingId">
    <label asp-for="TrainingId">@T["Training Id"] <span asp-validation-for="TrainingId"></span></label>
    <select asp-for="TrainingId" asp-items="Model.TrainingIdList" class="form-control"></select>
</fieldset>

@if (User?.Identity?.Name is not null)
{
    <fieldset class="form-group" asp-validation-class-for="AthleteUserId">
        <label asp-for="AthleteUserId">@T["Athlete Id"] <span asp-validation-for="AthleteUserId"></span></label>
        <input asp-for="AthleteUserId" type="text" value=@User.Identity.Name class="form-control" readonly />
    </fieldset>
}