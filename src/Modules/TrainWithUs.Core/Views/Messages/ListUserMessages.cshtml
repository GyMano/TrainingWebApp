@model IEnumerable<dynamic>
@using Microsoft.AspNetCore.Mvc.Localization
<header>
    <style>
        header.container {
            width: 100%
        }

        body {
            background-color: white;
            color: black;
        }

        ul {
            padding: 20px 0;
            margin: 20px 0;
        }

        li {
            padding: 20px 0;
        }

        header {
            background-color: Black;
            width: 100%;
            color: white;
            margin: 20px 0;
            text-align: center;
        }
    </style>

    <h1>@T.Plural(Model.Count(), $"You sent or recieved {Model.Count()} message", $"You sent or recieved {Model.Count()} messages")</h1>

    <strong>@T.Plural(Model.Count(), "Message:", "Messages:")</strong>

</header>
<body>

    <ul>
        @foreach (var shape in Model)
        {
            <li>

                @await DisplayAsync(shape)

            </li>
        }
    </ul>

</body>